# BSOD Analyzer Configuration

# ZhipuAI API Key (Get from https://open.bigmodel.cn/)
ZHIPU_API_KEY=your_api_key_here

# AI Model (default: glm-4.7)
AI_MODEL=glm-4.7

# Database path
DATABASE_PATH=~/.bsod_analyzer/crashes.db

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Default dump directory
DEFAULT_DUMP_DIR=C:/Windows/Minidump

# Max stack frames to display
MAX_STACK_FRAMES=10

# Confidence threshold (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.6
